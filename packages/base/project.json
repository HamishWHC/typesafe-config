{
  "name": "base",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/rollup:rollup",
        "options": {
          "main": "packages/base/index.ts"
        }
      }
    }
  },
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/base/jest.config.ts"
      }
    }
  }
}
